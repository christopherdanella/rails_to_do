<h1>Login</h1>

<% if @user && @user.errors.any? %>
  <ul>
    <li><% @user.errors.full_messages.each do |message| %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for '/login' do |f| %>
  Username: <%= f.text_field :email %>
  Password: <%= f.password_field :password %>
  <%= f.submit "Submit" %>
<% end %>